<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgItem"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/nombre"
       />

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dist"
        android:layout_below="@+id/imgItem"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/dist"
        android:text="000.0"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/direccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgItem"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/imgItem"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/distance"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/est1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/preview" />

        <ImageView
            android:id="@+id/est2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/preview" />

        <ImageView
            android:id="@+id/est3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/preview" />

        <ImageView
            android:id="@+id/est4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/preview" />

        <ImageView
            android:id="@+id/est5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/preview" />
    </LinearLayout>

    <TextView
        android:id="@+id/dist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/imgItem"
        android:layout_marginTop="5dp"
        android:text="@string/dist" />

</RelativeLayout>